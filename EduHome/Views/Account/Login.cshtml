@model LoginVm

@await Component.InvokeAsync("Banner", new { name = "Login" })

<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>

                            <br />
                            <a asp-action="Register">Don't you have an account?</a>
                            <br />
                        </div>
                        <div class="login-form">
                            <form  method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="UsernameOrEmail" placeholder="Username Or Email">
                                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                                <input asp-for="Password" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" asp-for="RememberMe" id="remember">
                                        <label for="remember">Remember me</label>
                                    <a asp-action="Register">Forgot password?</a>
                                    </div>
                                     

                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end --> 