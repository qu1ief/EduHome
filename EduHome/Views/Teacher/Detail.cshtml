@model Teacher


@await Component.InvokeAsync("Banner",new{name="Teacher Detail"})


<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img src="~/img/@Model.ImagePath" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Fullname</h2>
                    <h5>@Model.Profession</h5>
                    <h4>about me</h4>
                    <p>@Model.Degree </p>
                    <ul>
                        <li><span>degree: </span>@Model.Degree</li>
                        <li><span>experience: </span>@Model.Experience</li>
                        <li><span>hobbies: </span>@Model.Hobbies</li>
                        <li><span>faculty: </span>@Model.Faculty</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span>@Model.Email</p>
                    <p><span>make a call : </span>@Model.PhoneNumber</p>
                    <p><span>skype : </span> @Model.Skype</p>
                    <ul>
                        <li><a href="@Model.FacebookLink"><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href="@Model.PinterestLink"><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href="@Model.VKLink"><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href="@Model.TwitterLink"><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @foreach (var skill in Model.Skills)
                        {
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>@skill.Name</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.Point%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@skill.Point%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        }
                      
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->