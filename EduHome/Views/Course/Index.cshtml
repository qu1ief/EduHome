@model List<Course>


    @await Component.InvokeAsync("Banner",new{name="Courses"})

      <!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form  asp-action="Index">
                        <input type="search" placeholder="Search..." required  name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.Count == 0)
            {
                <h2>
                    Course is not found :(
                </h2>
            }
            else
            {
                @foreach (var course in Model)
                {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-course mb-70">
                            <div class="course-img">
                                <a asp-action="Detail" asp-route-id="@course.Id">
                                    <img src="~/img/@course.ImagePath" alt="course">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="course-content">
                                <h3><a href="course-details.html">@course.Name</a></h3>
                                @if (course.Description.Length > 100)
                                {
                                    <p>@course.Description.Substring(0, 100)</p>
                                }
                                else
                                {
                                    <p>@course.Description</p>
                                }
                                <a class="default-btn" asp-action="Detail" asp-route-id="@course.Id">read more</a>
                            </div>
                        </div>
                    </div>

                }

            }
        </div>
    </div>
</div>
<!-- Course End -->